<!DOCTYPE html>
<html lang="en" id="htmlTheme">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <script>
        const darkTheme = `<%= darkTheme %>`;
        if (darkTheme === 'on') {
            document.documentElement.classList.add('darkTheme');
        } else {
            document.documentElement.classList.remove('darkTheme');
        }
    </script>
    <link rel="stylesheet" href="/stylesheets/login-register.css">
    <link rel="stylesheet" href="/stylesheets/theme.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/png" href="/images/icon.png">
</head>
<body>
<main class="auth">
    <div id="emailForm">
        <div class="card">
            <div style="display: flex; gap: 10px;">
                <a href="/" class="card__a"><i class="fa fa-home"></i></a>
                <span class="card__title">Forgot Password</span>
            </div>
            <p class="card__content">
                Enter your email address to find your account.
            </p>
            <form id="findEmailForm" method="POST">
                <div class="card__form">
                    <p class="text">Email</p>
                    <input type="email" id="email" name="email" class="card__form-input" placeholder="Enter your email address" required>
                    <button class="card__button" id="findEmailBtn">Send Code</button>
                    <button class="card__button" id="loaderButton" hidden>
                        <section class="dots-container">
                            <div class="dot"></div>
                            <div class="dot"></div>
                            <div class="dot"></div>
                            <div class="dot"></div>
                        </section>
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>
<div class="toast-container" id="toast-container"></div>
<script src="/javascripts/auth/forgetPassword.js"></script>
<script src="/javascripts/alert.js"></script>
<script src="/javascripts/pageIdentificator.js"></script>
</body>
</html>
