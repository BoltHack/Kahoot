<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kahoot | New question</title>
    <link rel="icon" type="image/png" href="/images/icon.png">
    <link rel="stylesheet" href="/stylesheets/createGame.css">
</head>
<script>
    const maxQuestions = `<%= gamesInfo.game_max_questions %>`;
    const questionNumber = `<%= gamesInfo.game_questions.length + 1 %>`;
    const roomId = `<%= gamesInfo._id %>`;
</script>
<body>
<%- include('header.ejs') %>
<main>
    <div>
        <form action="/create-questions/<%= gamesInfo.id %>" method="POST" enctype="multipart/form-data">
            <div class="redaction-flex">
                <div class="modal questions-modal">
                    <div class="modal__body" id="modal0">
                        <div class="input">
                            <label class="input__label">Create question #<%= gamesInfo.game_questions.length + 1 %></label>
                            <input class="input__field" type="text" name="question_title" placeholder="Enter your question" required>
                        </div>
                        <div class="input">
                            <br>
                            <label class="input__label" style="font-weight: 450">Answer options</label>
                            <div style="display: flex; gap: 20px;">
                                <input class="input__field" type="text" name="question_title_question_1" placeholder="Answer 1" required>
                                <input class="input__field" type="text" name="question_title_question_2" placeholder="Answer 2" required>
                            </div>
                            <div style="display: flex; gap: 20px;">
                                <input class="input__field" type="text" name="question_title_question_3" placeholder="Answer 3" required>
                                <input class="input__field" type="text" name="question_title_question_4" placeholder="Answer 4" required>
                            </div>
                            <div class="input_container">
                                <p>Correct answer:</p>
                                <select name="question_title_correct_question" class="type" style="width: 100px;">
                                    <option value="question_1">1</option>
                                    <option value="question_2">2</option>
                                    <option value="question_3">3</option>
                                    <option value="question_4">4</option>
                                </select>
                            </div>
                            <br>
                        </div>
                        <div class="input">
                            <label class="input__label">Choose an image for the question</label>
                            <br>
                            <input type="file" accept="image/*" name="question_image" class="input-file">
                            <br>
                        </div>
                    </div>
                    <button type="submit" class="button button--primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</main>
<script src="/javascripts/redaction.js"></script>
<script src="/javascripts/timer.js"></script>
</body>
</html>
